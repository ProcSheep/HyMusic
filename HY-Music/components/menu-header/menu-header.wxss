/* components/menu-header/menu-header.wxss */
.content {
  position: relative;
  display: flex;
  flex-direction: column;
  height: 475rpx;
  color: #fff;
}

/* 1.背景 + 毛玻璃 */
.bg-image{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -2;
}

.bg-cover{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  background-color: rgba(0, 0, 0, .5);
  backdrop-filter: blur(5px);
}


/* 2.中间的介绍: 唱片图 简介 作者 标题... */
.album{
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 275rpx;
  /* background-color: red; */
  margin-top: 50rpx;
}

.album image{
  width: 220rpx;
  height: 220rpx;
  border-radius: 10%;
}

.album .avatar{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}

.album .info{
  height: 220rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.info .author{
  display: flex;
  align-items: center;
}

.author .nickname{
  margin-left: 20rpx;
  font-size: 27rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 300rpx;
}

.info .desc{
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 400rpx;
}

.info .title{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 400rpx;
}

.item{
  display: flex;
  align-items: center;
}

.item image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

/* 3.点赞 + 分享 */
.operation{
  display: flex;
  justify-content: space-around;
  margin-top: 50rpx;
}


