/* components/song-item-v2/song-item-v2.wxss */
.item{
  width: 100%;
  height: 100rpx;
  display: flex;
  /* justify-content: space-between; */
}

.item .index{
  width: 100rpx;
  height: 100%;
  text-align: center;
  line-height: 100rpx;
}

.item .info{
  /* 这个样式,对于超出屏幕的歌名的情况会造成干扰 */
  /* flex: 1; */
  width: calc(100% - 100rpx);
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.info .songName{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.source .icon{
  width: 40rpx;
  height: 20rpx;
  margin-right: 10rpx;
}

.source .artist{
  font-size: 24rpx;
}

