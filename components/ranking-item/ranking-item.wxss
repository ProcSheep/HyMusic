/* components/ranking-item/ranking-item.wxss */
.ranking{
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  border-radius: 15rpx;
  overflow: hidden;
  background-color: rgb(226, 226, 220);
}

.album{
  position: relative;
}

.album .image{
  height: 200rpx;
  width: 200rpx;
}

.album .count{
  position: absolute;
  width: 100rpx;
  height: 40rpx;
  border-radius: 10rpx;
  background-color: rgb(105, 103, 103);
  color: white;
  right: 0rpx;
  bottom: 0;
  text-align: center;
}


.content{
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  box-sizing: border-box;
  padding-left: 20rpx;
  

}
.content .name{
  font-size: 35rpx;
  font-weight: 700;
}

.content .list{
  margin-top: 10rpx;
}

.content .list .item{
  /* 省略号 */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 400rpx;
}